package com.mediQuick.medicineApp.service;

import java.util.List;
import java.util.stream.Collectors;

import org.modelmapper.ModelMapper;
import org.springframework.beans.factory.annotation.Autowired;

import com.mediQuick.medicineApp.dto.CustomerDto;
import com.mediQuick.medicineApp.entity.Medicines;
import com.mediQuick.medicineApp.entity.User;
import com.mediQuick.medicineApp.repositories.UserRepositories;

public class CustomerServiceImpl implements CustomerService {
	
	@Autowired
	private UserRepositories userRepo;
	
	@Autowired
	private ModelMapper modelMapper;

	@Override
	public List<CustomerDto> getAllcust() {
		return userRepo.findAll()
		.stream()
		.map(cust ->
		modelMapper.map(cust, CustomerDto.class))
		.collect(Collectors.toList());
	}

	@Override
	public CustomerDto getcust(Long custId) {
		User custEntity = modelMapper.map(custId, User.class);
	    User savedMed = userRepo.save(custEntity);
	    return modelMapper.map(savedMed, CustomerDto.class);
	}

	@Override
	public CustomerDto addcust(CustomerDto med) {
		// TODO Auto-generated method stub
		return null;
	}

	@Override
	public CustomerDto updatecust(Long custId, CustomerDto med) {
		// TODO Auto-generated method stub
		return null;
	}

	@Override
	public CustomerDto delcust(Long delId) {
		// TODO Auto-generated method stub
		return null;
	}

}
